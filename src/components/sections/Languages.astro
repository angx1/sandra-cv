---
import Section from "@/components/Section.astro";

import { languages } from "@cv";
---

<Section tittle="Languages">
  <ul>
    {
      languages.map(({ language, fluency }) => (
        <li>
          <article>
            <header>
              <h3>{language}</h3>
            </header>
            <footer>
              <p>{fluency}</p>
            </footer>
          </article>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  article {
    margin-bottom: 8px;
  }
</style>
