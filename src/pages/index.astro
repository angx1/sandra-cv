---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/sections/Hero.astro";
import About from "../components/sections/About.astro";
import Projects from "../components/sections/Projects.astro";
import Education from "../components/sections/Education.astro";
import Skills from "../components/sections/Skills.astro";
import Experience from "../components/sections/Experience.astro";
import Languages from "@/components/sections/Languages.astro";
import LastUpdate from "@/components/sections/LastUpdate.astro";
import Credits from "@/components/sections/Credits.astro";

import KeyboardManager from "../components/sections/KeyboardManager.astro";

import { basics } from "@cv";
const { banner } = basics;
---

<Layout title={`${banner} - cv`}>
  <LastUpdate />
  <main>
    <Hero />
    <About />
    <div class="container-main">
      <Education />
      <Languages />
    </div>
    <Experience />
    <div class="container-main project-skill">
      <Projects />
      <Skills />
    </div>
    <Credits />
  </main>
  <KeyboardManager />
</Layout>

<style>
  main {
    padding: 4rem;
    margin: auto;
    width: 100%;
  }
  .container-main {
    margin: auto !important;
    max-width: 700px;
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 2rem;
  }

  @media screen and (max-width: 768px) {
    .project-skill {
      grid-template-columns: 1fr;
    }
  }

</style>
